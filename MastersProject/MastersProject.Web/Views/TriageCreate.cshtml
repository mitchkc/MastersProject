@model Triage

<div class="card rounded shadow p-4">

    <div class="border-bottom d-flex align-items-center justify-content-between mb-3">
        <h3 class="text-primary">Add New Triage</h3>
    </div>

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" asp-for="PatientId" />

        <div class="mt-3">
            <label asp-for="PxLocation" class="form-label"></label>
            <input asp-for="PxLocation" class="form-control" />
            <span asp-validation-for="PxLocation" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="LastST" class="form-label"></label>
            <input asp-for="LastST" class="form-control" />
            <span asp-validation-for="LastST" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="LastSTLocation" class="form-label"></label>
            <input asp-for="LastSTLocation" class="form-control" />
            <span asp-validation-for="LastSTLocation" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="PxDescript" class="form-label"></label>
            <input asp-for="PxDescript" class="form-control" />
            <span asp-validation-for="PxDescript" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="IssueStart" class="form-label"></label>
            <input asp-for="IssueStart" class="form-control" />
            <span asp-validation-for="IssueStart" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="HapBefore" class="form-label"></label>
            <input asp-for="HapBefore" class="form-control" />
            <span asp-validation-for="HapBefore" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="Pain" class="form-label"></label>
            <input asp-for="Pain" class="form-control" />
            <span asp-validation-for="Pain" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="PainRating" class="form-label"></label>
            <input asp-for="PainRating" class="form-control" />
            <span asp-validation-for="PainRating" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="Redness" class="form-label"></label> @*checkbox*@
            <input asp-for="Redness" class="form-control" />
            <span asp-validation-for="Redness" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="Discharge" class="form-label"></label> @*checkbox*@
            <input asp-for="Discharge" class="form-control" />
            <span asp-validation-for="Discharge" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="Photosensitivity" class="form-label"></label> @*checkbox*@
            <input asp-for="Photosensitivity" class="form-control" />
            <span asp-validation-for="Photosensitivity" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="VisionAffected" class="form-label"></label> @*checkbox*@
            <input asp-for="VisionAffected" class="form-control" />
            <span asp-validation-for="VisionAffected" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="CLWearer" class="form-label"></label> @*checkbox*@
            <input asp-for="CLWearer" class="form-control" />
            <span asp-validation-for="CLWearer" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="CLInfo" class="form-label"></label>
            <input asp-for="CLInfo" class="form-control" />
            <span asp-validation-for="CLInfo" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="Flashes" class="form-label"></label> @*checkbox*@
            <input asp-for="Flashes" class="form-control" />
            <span asp-validation-for="Flashes" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="FlashesNew" class="form-label"></label>
            <input asp-for="FlashesNew" class="form-control" />
            <span asp-validation-for="FlashesNew" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="FlashWorsening" class="form-label"></label>
            <input asp-for="FlashWorsening" class="form-control" />
            <span asp-validation-for="FlashWorsening" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="Floaters" class="form-label"></label> @*checkbox*@
            <input asp-for="Floaters" class="form-control" />
            <span asp-validation-for="Floaters" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="FloatersNew" class="form-label"></label>
            <input asp-for="FloatersNew" class="form-control" />
            <span asp-validation-for="FloatersNew" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="FloatersWorsening" class="form-label"></label>
            <input asp-for="FloatersWorsening" class="form-control" />
            <span asp-validation-for="FloatersWorsening" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="Optom" class="form-label"></label>
            <input asp-for="Optom" class="form-control" />
            <span asp-validation-for="Optom" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="Advice" class="form-label"></label>
            <input asp-for="Advice" class="form-control" />
            <span asp-validation-for="Advice" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary" aria-label="create">Create</button>
            <a class="btn btn-secondary" asp-action="Index" aria-label="cancel">Cancel</a>
        </div>

    </form>
</div>