

<div class="card rounded shadow p-4">

   <!-- list header -->
   <div class="d-flex align-items-center justify-content-between mb-4">
      <h3>Triage Forms</h3>
   </div>

   <table class="table mt-4">
      <thead>
         <tr>
            <th>Date Created</th>
            <th>Action</th>
         </tr>
      </thead>
      <tbody>
         @if (Model.Triages.Count == 0)
         {
            <tr>
            <td>No Triage Forms..</td>
            </tr>
         }
         else
         {
            @foreach (var t in Model.Triages)
            {
               <tr>
                  <td>@t.CreatedOn.ToString("dd/MM/yyyy")</td>
                  <td>
                     <a asp-action="TriageDetails" asp-route-id="@t.TriageId" class="btn btn-primary">
                        <i class="bi bi-eye" title="View triage form"></i>
                        <span>Details</span>
                     </a>
                  </td>
               </tr>
            }
         }
      </tbody>
   </table>
</div>