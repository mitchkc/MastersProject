@model PatientSearchViewModel


<form asp-controller="Patient" asp-action="Index" method="GET">

    <div class="mb-3">
        <label class="form-check-label" for="forename">Forename</label>
        <input class="form-control me-2" asp-for="QueryFname" placeholder="Forename..">
    </div>

    <div class="mb-3">
        <label class="form-check-label" for="surname">Surname</label>
        <input class="form-control me-2" asp-for="QuerySname" placeholder="Surname..">
    </div>

    <div class="mb-4">
        <div>
            <label class="form-check-label" for="Dob">Date of Birth</label>
        </div>
        <input class="form-control-me-2" asp-for="Dob">
    </div>

    <div>
        <button class="btn btn-success" type="submit" aria-label="search">Search</button>
        <a asp-action="Index" class="btn btn-secondary ms-3" aria-label="clear">Clear</a>
    </div>

</form>
