@model Patient

<div class="card rounded shadow p-4 mt-5 mb-5 mx-auto w-100">

    <div class="position-absolute top-0 start-50 translate-middle rounded-circle bg-dark p-2">
        <svg class="text-white" width="28" height="28" xmlns="http://www.w3.org/2000/svg" width="16" height="16"
            fill="currentColor" class="bi bi-person-fill" viewBox="0 0 16 16">
            <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3Zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z" />
        </svg>
    </div>
    <h1 class="my-3 mx-auto">Edit Patient</h1>


    <form asp-action="Edit">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" asp-for="Pid" />

        <div class="row mt-3">
            <div class="col">
                <label asp-for="Forename" class="form-label"></label>
                <input asp-for="Forename" class="form-control" />
                <span asp-validation-for="Forename" class="text-danger"></span>
            </div>

            <div class="col">
                <label asp-for="Surname" class="form-label"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
        </div>

        <div class="mt-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="Address" class="form-label"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="row mt-3">
            <div class="col">
                <label asp-for="Gender" class="form-label"></label>
                <select asp-for="Gender" class="form-control">
                    <option>Female</option>
                    <option>Male</option>
                    <option>Other</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div class="col">
                <label asp-for="Dob" class="form-label">Date of Birth</label>
                <input asp-for="Dob" class="form-control" />
                <span asp-validation-for="Dob" class="text-danger"></span>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col">
                <label asp-for="Mobile" class="form-label"></label>
                <input asp-for="Mobile" class="form-control" />
                <span asp-validation-for="Mobile" class="text-danger"></span>
            </div>

            <div class="col">
                <label asp-for="HomeNumber" class="form-label">Home Number</label>
                <input asp-for="HomeNumber" class="form-control" />
                <span asp-validation-for="HomeNumber" class="text-danger"></span>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col">
                <label asp-for="GPName" class="form-label">GP Name</label>
                <input asp-for="GPName" class="form-control" />
                <span asp-validation-for="GPName" class="text-danger"></span>
            </div>

            <div class="col">
                <label asp-for="HandCNum" class="form-label">Health and Care Number</label>
                <input asp-for="HandCNum" class="form-control" />
                <span asp-validation-for="HandCNum" class="text-danger"></span>
            </div>
        </div>

        <div class="mt-3">
            <label asp-for="GPAddress" class="form-label">GP's Address</label>
            <input asp-for="GPAddress" class="form-control" />
            <span asp-validation-for="GPAddress" class="text-danger"></span>
        </div>

        <div class="row mt-3">
            <div class="col">
            <label asp-for="PatientType" class="form-label">Private or NHS?</label>
            <select asp-for="PatientType" class="form-control">
                <option>NHS</option>
                <option>Private</option>
            </select>
            <span asp-validation-for="PatientType" class="text-danger"></span>
        </div>

        <div class="col">
            <label asp-for="Opt" class="form-label"><i class="bi-person-badge-fill"></i>Opt In or Out</label>
            <select asp-for="Opt" asp-items="Html.GetEnumSelectList<Opt>()" class="form-control">
                <option value="" disabled selected>Select In or Out..</option>
            </select>
            <span asp-validation-for="Opt" class="text-danger"></span>
        </div>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-lg btn-success mr-3" aria-label="create">Save</button>
            <a class="btn btn-lg btn-danger" asp-action="Details" asp-route-id="@Model.Pid"
                aria-label="cancel">Cancel</a>
        </div>

    </form>
</div>