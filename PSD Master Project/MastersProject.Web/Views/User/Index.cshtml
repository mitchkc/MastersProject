@model Paged<User>

<h3 class="mb-3">User List</h3>
  
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Id
                <vc:sort-link column="uid" />
            </th>
            <th>
                Forename
                <vc:sort-link column="forename" />
            </th>
            <th>
                Surname
                <vc:sort-link column="surname" />
            </th>
            <th>
                Email
                <vc:sort-link column="email" />     
            </th>
            <th>
                Role
                <vc:sort-link column="role"/>
            </th>   
            <th>Action</th>           
        </tr>
    </thead>
    <tbody>
        @foreach(var u in Model.Data) {
            <tr>
                <td>@u.UId</td>
                <td>@u.Forename</td>
                <td>@u.Surname</td>
                <td>@u.Email</td>
                <td>@u.Role</td>  
                <td>
                    <a asp-action="UpdateProfile" asp-route-id="@u.UId" class="btn btn-primary">
                        <i class="bi bi-pencil-fill"></i>
                    </a>  
                    <a asp-action="Delete" asp-route-id="@u.UId" class="btn btn-danger">
                        <i class="bi bi-trash-fill"></i>
                    </a>              
                </td>
                
                    
                               
            </tr>
        }        
    </tbody>
</table>
<div class="mb-5">
<vc:paginator pages="Model.Pages" links="10"/>
</div>


