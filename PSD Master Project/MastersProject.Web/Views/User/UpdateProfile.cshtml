@model ProfileViewModel

<div class="card shadow p-4 mt-5 mx-auto w-75 mb-5">
  
    <div class="position-absolute top-0 start-50 translate-middle rounded-circle bg-dark p-2">
        <svg class="text-white" width="28" height="28" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-fill" viewBox="0 0 16 16">
          <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3Zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z"/>
        </svg>
    </div>
    
    <h3 class="my-3 mx-auto">Update Profile</h3>

    <form asp-action="UpdateProfile" method="post">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input asp-for="UId" type="hidden" />

        <div class="mt-3">
            <label asp-for="Forename" class="form-label"><i class="bi-person-fill"></i>Forename</label>
            <input asp-for="Forename" class="form-control" />
            <span asp-validation-for="Forename" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="Surname" class="form-label"><i class="bi-person-fill"></i>Surname</label>
            <input asp-for="Surname" class="form-control" />
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="Email" class="form-label"><i class="bi-envelope-fill"></i>Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="Address" class="form-label"><i class="bi bi-house-fill"></i>Address</label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="Gender" class="form-label"><i class="bi bi-gender-neuter"></i>Gender</label>
            <input asp-for="Gender" class="form-control" />
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="DoB" class="form-label"><i class="bi bi-calendar-event-fill"></i>DoB</label>
            <input asp-for="DoB" class="form-control" />
            <span asp-validation-for="DoB" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="MobileNumber" class="form-label"><i class="bi bi-phone-fill"></i>Mobile Number</label>
            <input asp-for="MobileNumber" class="form-control" />
            <span asp-validation-for="MobileNumber" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="HomeNumber" class="form-label"><i class="bi bi-telephone-fill"></i>Home Number</label>
            <input asp-for="HomeNumber" class="form-control" />
            <span asp-validation-for="HomeNumber" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="Role" class="form-label"><i class="bi bi-person-workspace"></i> Role</label>
            <select asp-for="Role" asp-items="Html.GetEnumSelectList<Role>()" class="form-control">
                <option>Select Role</option>
            </select>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <input type="submit" value="Save" class="btn btn-lg btn-success mr-3" />
            <a class="btn btn-lg btn-secondary" asp-controller="User" asp-action="Index">Cancel</a>
        </div>

    </form>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
