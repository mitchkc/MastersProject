<div class="card rounded shadow text-center bg-light">
    <a asp-condition="@(!User.Identity.IsAuthenticated)">
        <a class="btn btn-lg btn-secondary m-3" asp-controller="User" asp-action="Login">Login</a>
    </a>
    <a asp-condition="@(!User.Identity.IsAuthenticated)">
        <a class="btn btn-lg btn-secondary m-3"  asp-controller="User" asp-action="Register">Register</a>
    </a>
</div>




<!-- card is only visible when authorised -->
<div class="d-flex justify-content-center align-items-center p-5">
    <div asp-condition="@(User.Identity.IsAuthenticated)" class="card rounded shadow text-center bg-light">
        <div class="card-body">
            <div class="mt-3" asp-condition="@(User.Identity.IsAuthenticated)" class="button">
                <div class>
                    <a asp-condition=@User.HasOneOfRoles("admin,optometrist,staff") asp-controller="Patient" asp-action="Index" class="btn btn-secondary btn-lg m-3"
                        aria-label="Search Patients">
                        <i class="bi bi-search"></i>
                        <span>Search Patients</span>
                    </a>

                    <a asp-condition=@User.HasOneOfRoles("admin,optometrist,staff") asp-controller="Patient" asp-action="Create" class="btn btn-secondary btn-lg m-3"
                        aria-label="Add New Patient">
                        <i class="bi bi-person-plus"></i>
                        <span>Add New Patient</span>
                    </a>

                    <a asp-condition=@User.IsInRole("researcher") asp-controller="Patient" asp-action="Research"
                        class="btn btn-secondary btn-lg m-3 float-left" aria-label="Search database">
                        <i class="bi bi-person-plus"></i>
                        <span>Search Database</span>
                    </a>

                </div>
                <div>
                    <a asp-condition=@User.IsInRole("admin") asp-controller="User" asp-action="Register"
                        class="btn btn-secondary btn-lg m-3 float-left" aria-label="Add New Staff">
                        <i class="bi bi-person-plus"></i>
                        <span>Add New Staff</span>
                    </a>

                    <a asp-condition=@User.IsInRole("admin") asp-controller="User" asp-action="Index"
                        class="btn btn-secondary btn-lg m-3" aria-label="View Saff">
                        <i class="bi bi-eye"></i>
                        <span>View Staff</span>
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>
